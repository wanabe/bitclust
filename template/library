<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang="ja-JP">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=<%=h charset() %>">
  <meta http-equiv="Content-Language" content="ja-JP">
  <link rel="stylesheet" type="text/css" href="<%=h css_url() %>">
  <title>library <%=h @entry.name %></title>
</head>
<body>

<p>
<a href="<%= library_index_url() %>">All Libraries</a>
&gt; library <%= @entry.name %>
</p>
<%
    headline_init
%>
<%= headline("library #{@entry.name}") %>
<%
    headline_push
    classes = @entry.classes.sort
%>

<%= headline("Abstract") %>
<%= compile_rd(@entry.synopsis_source) %>

<%  unless classes.empty? %>
<%= headline("Provided Classes/Modules") %>
<dl>
<%
    classes.each do |c|
%>
<dt><%=h c.type.to_s %> <%= class_link(c.name) %></dt>
<dd>
<p><code>
<%    c.entries.sort.each do |m| %>
<%= link_to_method(m) %>
<%    end %>
</code></p>
</dd>
<%
    end
%>
</dl>
<%  end %>

<%  ents = @entry.methods.sort
    unless ents.empty? %>
<%= headline("Added Methods") %>
<p><code>
<%    ents.each do |m| %>
<%= link_to_method(m, true) %>
<%    end %>
</code></p>
<%  end %>

<%= headline("Description") %>
<%= compile_rd(@entry.detail_source) %>
<% headline_pop %>

</body>
</html>
