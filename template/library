<%
    headline_init
%>
<%= headline("library #{@entry.name}") %>
<%
    headline_push
    classes = @entry.classes.sort
%>
<%= compile_rd(@entry.source) %>
<%= headline("Classes, Modules, and Objects") %>
<p><code>
<%
    classes.each do |c| %>
<%= class_link(c.name) %>
<%  end
%>
</code></p>
<%= headline("with Methods") %>
<dl>
<%
    classes.each do |c|
%>
<dt><%=h c.type.to_s %> <%= class_link(c.name) %></dt>
<dd>
<p><code>
<%    c.entries.sort.each do |m| %>
<%= link_to_method(m) %>
<%    end %>
</code></p>
</dd>
<%
    end
    headline_pop
%>
</dl>

</body>
